<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval" ><solid android:color="@color/colorPrimary" />
            <size android:width="170dp" android:height="170dp"/>
        </shape>
    </item>

    <item android:bottom="@dimen/circle_margin" android:right="@dimen/circle_margin" android:top="@dimen/circle_margin" android:left="@dimen/circle_margin" >
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="oval" >
                    <solid android:color="@color/colorButton" />
                    <size android:width="162dp" android:height="162dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="oval" >
                    <solid android:color="@android:color/white" />
                    <size android:width="162dp" android:height="162dp"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>