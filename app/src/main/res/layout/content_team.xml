<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="#FFFFFF"
    tools:context="imagecup.nju.intellichens.automemo.activity.TeamActivity"><!-- Login progress -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#d4eaeaea"
            android:gravity="center_vertical"
            android:orientation = "vertical">
            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">
                <TextView
                    android:id = "@+id/name_value"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:textColor = "@color/colorAccent"
                    android:text="Averager"
                    android:textSize = "40sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">
                <TextView
                    android:id = "@+id/time_value"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:gravity = "center_vertical"
                    android:textColor = "@color/colorAccent"
                    android:text="2016.01.01 12:00:00"
                    android:textSize = "14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:orientation = "vertical">
                <Button
                    android:id="@+id/create_record_button"
                    style="@style/my_textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Create Record"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/myerct"/>
        <ExpandableListView
            android:id="@+id/expandlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/gbt"
            android:childDivider="@drawable/fij">
        </ExpandableListView>
    </LinearLayout>
</RelativeLayout>
